{
  "name": "vendor/affiliate-product-showcase",
  "description": "Affiliate Product Showcase WordPress plugin",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=7.4 <8.4"
  },
  "require-dev": {
    "automattic/vipwpcs": "^3.0",
    "fakerphp/faker": "^1.23",
    "mockery/mockery": "^1.5",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "vimeo/psalm": "^5.0",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "AffiliateProductShowcase\\": "src/"
    },
    "classmap": [
      "includes/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "AffiliateProductShowcase\\Tests\\": "tests/"
    }
  },
  "config": {
    "platform-check": true,
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "test": "vendor/bin/phpunit --configuration phpunit.xml",
    "lint": "vendor/bin/phpcs",
    "analyze": "vendor/bin/phpstan analyse src tests",
    "analyze:psalm": "vendor/bin/psalm",
    "build": "composer install --no-dev --optimize-autoloader",
    "package": "composer archive --format=zip --file=build/affiliate-product-showcase"
  },
  "extra": {
    "archive": {
      "exclude": [
        "/vendor/",
        "/node_modules/",
        "/tests/",
        "/docs/",
        "/plan/",
        "/docker/",
        "/scripts/",
        "/tmp/",
        "tmp_check_diff.js",
        "tmp_compare_plugin_tree.js",
        "tmp_compare_plugin_tree_hier.js",
        "tmp_plan_1_2_audit.js",
        "tmp_todo_generated.md"
      ]
    }
  }
}
