{
    "name": "randomfact236/affiliate-product-showcase",
    "description": "Affiliate Product Showcase WordPress Plugin",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "randomfact236",
            "email": "dev@example.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "slevomat/coding-standard": "^8.14",
        "phpcompatibility/php-compatibility-hr": "^9.3",
        "wp-coding-standards/wpcs": "^3.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "AffiliateProductShowcase\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AffiliateProductShowcase\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse --error-format=table",
        "phpcs": "phpcs --report=summary --report-width=80",
        "phpcbf": "phpcbf"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
