# ============================================
# AFFILIATE PLATFORM - ENVIRONMENT CONFIG
# Framework: NestJS 10 + PostgreSQL + Redis
# ============================================

# Environment
NODE_ENV=development

# ============================================
# DATABASE
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=affiliate
DB_PASSWORD=your_secure_password_here_min_16_chars
DB_NAME=affiliate_db
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public&connection_limit=20"

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
# REDIS_TLS_ENABLED=true  # Enable in production

# ============================================
# JWT AUTHENTICATION
# Generate strong secrets: openssl rand -base64 64
# ============================================
JWT_SECRET=your_jwt_secret_min_32_chars_generate_with_openssl_rand_base64_64
JWT_REFRESH_SECRET=your_refresh_secret_must_be_different_from_jwt_secret
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=affiliate-platform
JWT_AUDIENCE=affiliate-api

# ============================================
# OBJECT STORAGE (MinIO/S3)
# ============================================
STORAGE_ENDPOINT=localhost
STORAGE_PORT=9000
STORAGE_ACCESS_KEY=minio
STORAGE_SECRET_KEY=minio_secret
STORAGE_BUCKET=affiliate-media
STORAGE_REGION=us-east-1
STORAGE_PUBLIC_URL=http://localhost:9000/affiliate-media

# ============================================
# API SERVICE
# ============================================
API_PORT=3001
API_HOST=0.0.0.0
API_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# WEB SERVICE
# ============================================
WEB_URL=http://localhost:3000
