{
  "name": "affiliate-product-showcase",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-window": "^1.8.10"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "vite build",
    "watch": "vite build --watch",
    "preview": "vite preview",
    "lint": "npm run lint:php && npm run lint:js && npm run lint:css",
    "lint:php": "cd ../../.. && composer --working-dir=wp-content/plugins/affiliate-product-showcase phpcs",
    "lint:js": "eslint 'assets/**/*.{js,jsx}' --max-warnings=0",
    "lint:css": "stylelint 'assets/**/*.{css,scss}' --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write '**/*.{js,jsx,css,scss,json,md,yml,yaml}'",
    "format:check": "prettier --check '**/*.{js,jsx,css,scss,json,md,yml,yaml}'",
    "test": "cd ../../.. && composer --working-dir=wp-content/plugins/affiliate-product-showcase test",
    "test:coverage": "cd ../../.. && composer --working-dir=wp-content/plugins/affiliate-product-showcase test:coverage",
    "test:a11y": "pa11y-ci --config .a11y.json",
    "test:tools": "vitest run",
    "test:tools:watch": "vitest watch",
    "test:tools:coverage": "vitest run --coverage",
    "assert-coverage": "bash scripts/assert-coverage.sh",
    "check-debug": "node scripts/check-debug.js",
    "backup": "bash scripts/create-backup-branch.sh",
    "backup:windows": "pwsh scripts/create-backup-branch.ps1",
    "quality": "npm run lint && npm run test",
    "precommit": "lint-staged && npm run check-debug",
    "prepush": "npm run quality && npm run assert-coverage",
    "compile-mo": "node scripts/compile-mo.js languages/affiliate-product-showcase-en_US.po languages/affiliate-product-showcase-en_US.mo",
    "autoload:optimize": "bash scripts/optimize-autoload.sh optimize",
    "autoload:dev": "bash scripts/optimize-autoload.sh dev",
    "autoload:verify": "bash scripts/optimize-autoload.sh verify",
    "generate:sri": "tsx tools/generate-sri.ts",
    "compress": "tsx tools/compress.ts",
    "check:external": "tsx tools/check-external-requests.ts",
    "postbuild": "npm run compress",
    "analyze": "npm run build -- --mode=analyze",
    "clean": "rimraf assets/dist"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^25.0.9",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.17",
    "@wordpress/eslint-plugin": "^15.1.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.56.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^11.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "pa11y": "^8.0.0",
    "pa11y-ci": "^3.1.0",
    "postcss": "^8.4.47",
    "prettier": "^3.1.1",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.77.8",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-selector-bem-pattern": "^3.0.1",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.21.0",
    "vite": "^5.1.8",
    "vitest": "^4.0.17"
  }
}
