{
  "name": "affiliate-product-showcase",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "vite build",
    "watch": "vite build --watch",
    "preview": "vite preview",
    "lint": "npm run lint:php && npm run lint:js && npm run lint:css",
    "lint:php": "cd ../../.. && composer --working-dir=wp-content/plugins/affiliate-product-showcase phpcs",
    "lint:js": "eslint 'assets/**/*.{js,jsx,ts,tsx}' --max-warnings=0",
    "lint:css": "stylelint 'assets/**/*.{css,scss}' --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,scss,json,md,yml,yaml}'",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,css,scss,json,md,yml,yaml}'",
    "typecheck": "tsc --noEmit",
    "test": "cd ../../.. && composer --working-dir=wp-content/plugins/affiliate-product-showcase test",
    "test:coverage": "cd ../../.. && composer --working-dir=wp-content/plugins/affiliate-product-showcase test:coverage",
    "assert-coverage": "bash scripts/assert-coverage.sh",
    "check-debug": "node scripts/check-debug.js",
    "quality": "npm run lint && npm run typecheck && npm run test",
    "precommit": "lint-staged && npm run check-debug",
    "prepush": "npm run quality && npm run assert-coverage",
    "generate:sri": "node tools/generate-sri.js",
    "compress": "node tools/compress-assets.js",
    "postbuild": "npm run generate:sri && npm run compress",
    "analyze": "npm run build -- --mode=analyze",
    "clean": "rimraf assets/dist"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@wordpress/eslint-plugin": "^15.1.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.56.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.47",
    "prettier": "^3.1.1",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.77.8",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-selector-bem-pattern": "^3.0.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3",
    "vite": "^5.1.8",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3"
  }
}
