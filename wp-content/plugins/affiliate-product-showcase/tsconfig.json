{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": ["ES2020", "DOM", "DOM.Iterable", "ESNext.AsyncIterable"],
    "isolatedModules": true,
    "types": ["vite/client"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./frontend/*"],
      "@js/*": ["./frontend/js/*"],
      "@css/*": ["./frontend/styles/*"],
      "@components/*": ["./frontend/js/components/*"],
      "@utils/*": ["./frontend/js/utils/*"],
      "@hooks/*": ["./frontend/js/hooks/*"],
      "@store/*": ["./frontend/js/store/*"],
      "@api/*": ["./frontend/js/api/*"],
      "@assets/*": ["./assets/*"],
      "@images/*": ["./assets/images/*"],
      "@fonts/*": ["./assets/fonts/*"]
    }
  },
  "include": ["frontend/**/*", "src/**/*"],
  "exclude": ["node_modules", "assets/dist", "vendor"]
}
