# Example .env for local CI and development
# Copy this to .env or let CI copy it automatically.

# MySQL (initialize DB container with these credentials)
MYSQL_ROOT_PASSWORD=changeme
MYSQL_DATABASE=wordpress
MYSQL_USER=wpuser
MYSQL_PASSWORD=wp-password

# WordPress (use same credentials so WP can connect)
WORDPRESS_DB_HOST=db:3306
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wpuser
WORDPRESS_DB_PASSWORD=wp-password

# phpMyAdmin
PMA_HOST=db
PMA_USER=root
PMA_PASSWORD=${MYSQL_ROOT_PASSWORD}
# Blowfish secret for phpMyAdmin cookie encryption (set in .env for local dev)
PMA_BLOWFISH_SECRET=b1f3c9a6d7e24f8a9c6b2e4f9a1b3c7d

# Optional: Certbot/Let's Encrypt (used by docker compose if configured)
LETSENCRYPT_DOMAINS=example.com,www.example.com
LETSENCRYPT_EMAIL=you@example.com

# Example: enable debug mode
# WORDPRESS_DEBUG=1

# Optional: override exposed ports and host binds for local development
# Use these to change host ports without editing compose files.
# Nginx HTTP port (host:container)
NGINX_HTTP_PORT=8000
# Nginx HTTPS port (host:container)
NGINX_HTTPS_PORT=8443

# phpMyAdmin host-bind and port
PHPMYADMIN_HOST_BIND=127.0.0.1
PHPMYADMIN_PORT=8080

# MailHog ports
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# Redis port (host:container)
REDIS_PORT=6379

# Optional: blowfish secret already above, other service vars documented where used
