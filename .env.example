# Example .env for local CI and development
# Copy this to .env or let CI copy it automatically.

# MySQL
MYSQL_ROOT_PASSWORD=changeme
MYSQL_DATABASE=wordpress
MYSQL_USER=wpuser
MYSQL_PASSWORD=wp-password

# WordPress
WORDPRESS_DB_HOST=db:3306
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wpuser
WORDPRESS_DB_PASSWORD=wp-password

# phpMyAdmin
PMA_HOST=db
PMA_USER=root
PMA_PASSWORD=changeme

# Optional: Certbot/Let's Encrypt (used by docker compose if configured)
LETSENCRYPT_DOMAINS=example.com,www.example.com
LETSENCRYPT_EMAIL=you@example.com
# Local development environment variables for Docker Compose
# Copy this file to .env and customize values. Never commit .env with secrets.

# MySQL
# IMPORTANT: copy this file to `.env` and set a strong password for `MYSQL_ROOT_PASSWORD`.
# Do NOT commit the real `.env` file to version control.
# Example to generate a random password (Linux/macOS):
#   openssl rand -base64 32
# Or (PowerShell):
#   [System.Web.Security.Membership]::GeneratePassword(24,4)
MYSQL_ROOT_PASSWORD=change-me-please-set-a-strong-password
MYSQL_DATABASE=wordpress
MYSQL_USER=wp
MYSQL_PASSWORD=change-me-please-set-a-different-strong-password

# WordPress (optional: override defaults)
WORDPRESS_DB_HOST=db:3306
WORDPRESS_DB_USER=wp
WORDPRESS_DB_PASSWORD=wp
WORDPRESS_DB_NAME=wordpress

# phpMyAdmin
PMA_HOST=db
PMA_USER=root
PMA_PASSWORD=${MYSQL_ROOT_PASSWORD}

# Example: enable debug mode
# WORDPRESS_DEBUG=1
