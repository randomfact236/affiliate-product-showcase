# Example .env for local CI and development
# Copy this to .env or let CI copy it automatically.

# MySQL (initialize DB container with these credentials)
MYSQL_ROOT_PASSWORD=changeme
MYSQL_DATABASE=wordpress
MYSQL_USER=wpuser
MYSQL_PASSWORD=wp-password

# WordPress (use same credentials so WP can connect)
WORDPRESS_DB_HOST=db:3306
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wpuser
WORDPRESS_DB_PASSWORD=wp-password

# phpMyAdmin
PMA_HOST=db
PMA_USER=root
PMA_PASSWORD=${MYSQL_ROOT_PASSWORD}

# Optional: Certbot/Let's Encrypt (used by docker compose if configured)
LETSENCRYPT_DOMAINS=example.com,www.example.com
LETSENCRYPT_EMAIL=you@example.com

# Example: enable debug mode
# WORDPRESS_DEBUG=1
