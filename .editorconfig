root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.php]
indent_size = 4

[*.{json,js,ts}]
indent_style = space
indent_size = 2

[composer.json]
indent_style = space
indent_size = 4

[package.json]
indent_style = space
indent_size = 2

[*.{bat,cmd,ps1}]
end_of_line = crlf

[Makefile]
indent_style = tab

# WordPress specific
[*.{php,inc}]
indent_style = tab
tab_width = 4
max_line_length = 120
